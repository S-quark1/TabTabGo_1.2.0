{
  "manifest_version": 3,
  "name": "TabTab Go",
  "version": "1.2.0",
  "description": "Region-based keyboard navigation for Gmail. Press Tab to navigate by regions, then drill down to specific elements.",
  "icons": {
    "16": "UI/icon16.png",
    "48": "UI/icon48.png",
    "128": "UI/icon128.png"
  },
  "permissions": [
    "storage",
    "downloads",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "UI/popup.html",
    "default_title": "TabTab Go"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["UI/styles.css"],
      "run_at": "document_idle"
    }
  ]
}
